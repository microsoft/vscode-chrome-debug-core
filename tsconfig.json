{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "sourceMap": true,
        "outDir": "out",
        "rootDir": ".",
        "declaration": true,

        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "node_modules/@types/**/*.ts"
    ]
}
