{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--exit",
                "--recursive",
                "-u", "tdd", "./out/test/", "--debug"
            ],
            "cwd": "${workspaceFolder}",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "outFiles": ["${workspaceFolder}/out/**/*.js"]
        },
        {
            "name": "Test (Coverage)",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceFolder}/node_modules/nyc/bin/nyc",
            "args": [
                "mocha",
                "--require", "source-map-support/register",  "--exit", "--recursive", "-u", "tdd", "./out/test/"
            ],
            "cwd": "${workspaceFolder}",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "outFiles": ["${workspaceFolder}/out/**/*.js"]
        },
        {
            "name": "Grepped Tests",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [ "--no-timeouts", "${workspaceFolder}/out/**/*.js", "--ui", "tdd",  "--grep", "<tests to grep for>" ],
            "cwd": "${workspaceFolder}",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "outFiles": ["${workspaceFolder}/out/**/*.js"]
        },
        // Since debugging is difficult when using npm link from the project that consumes this extension, here's a workaround.
        // Replace the paths below with the paths to your own project.
        {
            "name": "launch node-debug2",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",

            // These paths are only valid for my particular setup! You need to replace them with your own.
            "cwd": "${workspaceFolder}/../vscode-node-debug2",
            "program": "${workspaceFolder}/../vscode-node-debug2/out/src/nodeDebug.js",
            "args": [ "--server=4712" ],
            "outFiles": ["${workspaceFolder}/../vscode-node-debug2/out/**/*.js"],
            "internalConsoleOptions": "openOnSessionStart",
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "launch chrome-debug",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",

            // These paths are only valid for my particular setup! You need to replace them with your own.
            "cwd": "${workspaceFolder}/../vscode-chrome-debug",
            "program": "${workspaceFolder}/../vscode-chrome-debug/out/src/chromeDebug.js",
            "args": [ "--server=4712" ],
            "outFiles": ["${workspaceFolder}/../vscode-chrome-debug/out/**/*.js"],
            "internalConsoleOptions": "openOnSessionStart",
            "smartStep": true
        },
        {
            "name": "attach chrome-debug-core",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 1235,

            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "internalConsoleOptions": "openOnSessionStart",
            "smartStep": true
        },
        {
            "name": "Debug gulpfile",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",

            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/gulp",
            "args": [
                "transifex-push-test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}